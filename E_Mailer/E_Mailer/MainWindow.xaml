<Window x:Class="E_Mailer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E_Mailer"
        mc:Ignorable="d"
        
        x:Name="LogScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        MinHeight="450"
        MinWidth="800"
        Title="E-Mailer" Height="450" Width="800" Icon="Images/Icon.ico">

    <Window.Resources>
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <Border Padding="{Binding OuterMarginThickness, FallbackValue=10}">
                            <Grid>
                                <!-- CornerRadius = round window shape -->
                                <Border Background="{DynamicResource MainBackground}" CornerRadius="20">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="10" Opacity="0.4"/>
                                    </Border.Effect>
                                </Border>

                                <!--Window content-->
                                <Border Padding="2" >
                                    <ContentPresenter Content="{TemplateBinding Content}"/>
                                </Border>

                                <!--Title bar-->
                                <Grid VerticalAlignment="Top" HorizontalAlignment="Right">
                                    <Border Name="Mask" CornerRadius="0,20,0,0" 
                                            Background="{DynamicResource MainBackground}">
                                    </Border>

                                    <Grid MouseDown="Grid_MouseDown" PreviewMouseMove="Button_PreviewMouseMove" 
                                              Height="45" Width="600">

                                        <Grid.Background>
                                            <ImageBrush ImageSource="{DynamicResource TitleBar}"/>
                                        </Grid.Background>

                                        <Grid.OpacityMask>
                                            <VisualBrush Visual="{Binding ElementName=Mask}"/>
                                        </Grid.OpacityMask>

                                        <Grid.ColumnDefinitions>
                                            <!--Icon-->
                                            <ColumnDefinition Width="*"/>
                                            <!--Title-->
                                            <ColumnDefinition Width="4*"/>
                                            <!--Space-->
                                            <ColumnDefinition Width="8*"/>
                                            <!--Buttons-->
                                            <ColumnDefinition Width="2.75*"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="Images/Icon.ico" Margin="10,0,0,0"/>

                                        <Viewbox Grid.Column="1">
                                            <TextBlock Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Title, FallbackValue='E-Mailer'}"
                                                       Style="{StaticResource BaseStyleBlock}"/>
                                        </Viewbox>

                                        <StackPanel Grid.Column="3" Orientation="Horizontal" Height="39" VerticalAlignment="Top">
                                            <Button Content="-" Command="{Binding MinimaliseCommand}" Style="{StaticResource WindowControlButton}"/>
                                            <Button Content="[ ]" Command="{Binding MaximaliseCommand}" Style="{StaticResource WindowControlButton}" />
                                            <Button Content="X" Command="{Binding CloseCommand}" Style="{StaticResource WindowControlButton}"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome 
            ResizeBorderThickness="{Binding ResizeBorderThickness}"
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0"           
            />
    </WindowChrome.WindowChrome>

    <Grid>
        <Frame x:Name="MainFrame" Content="{Binding CurrentPage, Converter={local:ApplicationPageValueConverter}}" />
    </Grid>

</Window>