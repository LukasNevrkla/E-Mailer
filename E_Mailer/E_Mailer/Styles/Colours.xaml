<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:E_Mailer.Styles">

    <Color x:Key="BacgroundColour">#efefef</Color>
    <SolidColorBrush x:Key="BackgroundSolidBrush" Color="{StaticResource BacgroundColour}"/>

    <Color x:Key="TitleColour">#000000</Color>
    <SolidColorBrush x:Key="TitleSolidBrush" Color="{StaticResource BacgroundColour}"/>

    <Color x:Key="NoSellectedColour">#000000</Color>
    <SolidColorBrush x:Key="NoSellectedSolidBrush" Color="{StaticResource NoSellectedColour}"/>

    <Color x:Key="SellectedColour">#cccccc</Color>
    <SolidColorBrush x:Key="SellectedSolidBrush" Color="{StaticResource SellectedColour}"/>

    <Color x:Key="SellectedColour2">#770000</Color>
    <SolidColorBrush x:Key="SellectedSolidBrush2" Color="{StaticResource SellectedColour2}"/>

    <Color x:Key="ButtonTextCollor">#FF230000</Color>

    <Color x:Key="BaseTextCollor_1">#FF290000</Color>
    <Color x:Key="BaseTextCollor_2">#FF700000</Color>
    
    <LinearGradientBrush x:Key="BaseBrush" EndPoint="1,0.5" MappingMode="RelativeToBoundingBox" StartPoint="0,0.5">
        <GradientStop Color="{StaticResource BaseTextCollor_1}" Offset="0"/>
        <GradientStop Color="{StaticResource BaseTextCollor_2}" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>