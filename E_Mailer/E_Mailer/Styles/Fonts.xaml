<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:E_Mailer.Styles"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="BaseFont">Segoe Print</FontFamily>
    <FontFamily x:Key="HeaderFont">Comic Sans MS</FontFamily>
    <FontFamily x:Key="ButtonFont">Comic Sans MS</FontFamily>

    <System:Double x:Key="SmallFontSize">14</System:Double>
    <System:Double x:Key="NormalFontSize">18</System:Double>
    <System:Double x:Key="BigFontSize">25</System:Double>
    <System:Double x:Key="LargeFontSize">40</System:Double>
    
</ResourceDictionary>