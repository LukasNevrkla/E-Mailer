    <Color x:Key="FrameBackground_1">#FFA79AD4</Color>
    <Color x:Key="FrameBackground_2">#FFDEDEDE</Color>

    <LinearGradientBrush x:Key="FrameBackground" EndPoint="1,0.5" MappingMode="RelativeToBoundingBox" StartPoint="0,0.5">
